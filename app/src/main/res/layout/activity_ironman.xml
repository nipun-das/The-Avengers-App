<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:id="@+id/cover"
                android:layout_width="1000dp"
                android:layout_height="150dp"
                android:src="@drawable/iron_coverr" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@id/cover"
                android:background="@drawable/black_box"
                android:backgroundTint="#40c4ff" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="800dp"
               android:layout_marginTop="170dp"
                android:background="@drawable/black_box" />

            <TextView
                android:id="@+id/name"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_below="@+id/cover"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="Tony Stark"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneID"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_below="@+id/name"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="+91 7736475692"
                android:textColor="#ff5966"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailID"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/phoneID"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="tonystark@starkindustries.in"
                android:textColor="#fb6f00"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_below="@+id/emailID"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:text="Genius. Billionaire. Philanthropist.                     Tony Stark's confidence is only matched by his high-flying abilities as the hero called Iron Man."
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/info"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/black_box"
                android:backgroundTint="#dd2c00"
                android:gravity="center"
                android:text="Intelligence"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/two"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/info"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/one"
                android:background="@drawable/black_box"
                android:backgroundTint="#fb6f00"
                android:gravity="center"
                android:text="Genius"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/three"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/info"
                android:layout_marginLeft="60dp"

                android:layout_marginTop="90dp"
                android:background="@drawable/black_box"
                android:backgroundTint="#fb6f00"
                android:gravity="center"
                android:text="Iron-Suit"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/four"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/info"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="90dp"
                android:layout_toRightOf="@id/three"
                android:background="@drawable/black_box"
                android:backgroundTint="#dd2c00"
                android:gravity="center"
                android:text="Will-Power"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

